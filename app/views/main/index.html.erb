<div class="container">
    <div class="jumbotron">
        <h1>Unicows Store</h1>
        <p>We are (kinda) online!</p>
    </div>
</div>

<div class="container">
    <div class="row">
        <% @products.each do |product| %>
            <% if product.is_product? %>
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src="<%= product.image['url']%>" alt="">
                        <div class="caption">
                            <h4 class="pull-right"><%= "R$ #{product.price},00" %></h4>
                            <!-- TODO Adicionar link para o produto -->
                            <h4><a href="#"><%= product.title %></a></h4>
                            <p><%= product.description %></p>
                        </div>
                    </div>
                </div>
            <% end %>
        <% end %>
    </div>
</div>
