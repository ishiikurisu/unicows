<div class="container">
    <div class="jumbotron unicows-jumbo-brand">
        <%= image_tag "logo-transparent.png", class: "unicows-brand" %>
    </div>
</div>

<div class="container">
    <div class="row">
        <% @products.each do |product| %>
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="<%= product.image%>" alt="">
                    <div class="caption">
                        <% if product.is_on_sale? %>
                            <h4 class="pull-right">R$ <%= product.price %>,00</h4>
                        <% else %>
                            <h4 class="pull-right">VENDIDO</h4>
                        <% end %>
                        <h4><a href="/products/show?id=<%= product.id %>"><%= product.name %></a></h4>
                        <p><%= product.caption %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
