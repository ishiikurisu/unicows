<div class="container">
    <div class="row">
        <% @products.each do |product| %>
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <img src="<%= product.image %>" alt="">
                    <div class="caption">
                        <% if product.is_on_sale? %>
                            <h4 class="pull-right">R$ <%= product.price %>,00</h4>
                        <% else %>
                            <h4 class="pull-right">VENDIDO</h4>
                        <% end %>
                        <h4><a href="/products/show?id=<%= product.id %>"><%= product.name %></a></h4>
                        <p><%= product.caption %></p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
<div class="container">
    <div class="col-sm-4 col-lg-4 col-md-4 col-sm-offset-4 col-lg-offset-4 col-md-offset-4">
        <p>
            <% if @page > 1 %>
                <a href="/products/list?page=<%= @page-1 %>">&lt;</a>
            <% end %>
                P&aacute;gina <%= 1 + @page %>
            <% if @page < @limit %>
                <a href="/products/list?page=<%= @page+1 %>">&gt;</a>
            <% end %>
        </p>
    </div>
</div>
